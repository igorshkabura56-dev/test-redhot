

{%- liquid
  assign gallery_layout = gallery_layout | default: 'thumbnail_slider'

  assign has_variant = false
  if product.has_only_default_variant == false
    assign has_variant = true
  endif

  if has_variant
    assign media_count = product.selected_or_first_available_variant.metafields.custom.variant_gallery.value.count
  else
    assign media_count = product.media.size
  endif

  if media_count == 0 or section.settings.mobile_thumbnails == 'show' or section.settings.mobile_thumbnails == 'columns' and media_count < 3
    assign hide_mobile_slider = true
  endif

  if section.settings.media_size == 'large'
    assign media_width = 0.65
  elsif section.settings.media_size == 'medium'
    assign media_width = 0.55
  elsif section.settings.media_size == 'small'
    assign media_width = 0.45
  endif
-%}

{%- liquid
  assign slides_desktop = slides_desktop | default: 1
  assign slides_tablet  = slides_tablet  | default: 1
  assign slides_mobile  = slides_mobile  | default: 1

  assign preload_count = slides_desktop
  if slides_tablet > preload_count
    assign preload_count = slides_tablet
  endif
  if slides_mobile > preload_count
    assign preload_count = slides_mobile
  endif
-%}

