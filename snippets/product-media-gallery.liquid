/* ----- Scoped: gallery spacing for this section only ----- */
#Slider-Gallery-{{ section.id }}{
  /* 1) Вимикаємо вплив Dawn */
  --grid-mobile-horizontal-spacing: 0 !important;
  --grid-desktop-horizontal-spacing: 0 !important;
  --grid-peek: 0 !important;
  margin: 0 !important;
  padding: 0 !important;

  display: flex !important;
  flex-wrap: nowrap;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;

  /* скидаємо будь-які “комбіновані” gap */
  gap: 0 !important;
  row-gap: 0 !important;
  column-gap: 0 !important;

  /* наш керований відступ (початково — мобільний) */
  --g: {{ section.settings.gap_mobile | default: 20 }}px;
}

/* grid--peek на цьому треку нам не потрібен */
#Slider-Gallery-{{ section.id }}.grid--peek{
  margin-left: 0 !important;
  padding-left: 0 !important;
}

/* 2) Слайдам — нуль маржів від теми */
#Slider-Gallery-{{ section.id }} > .slider__slide{
  margin: 0 !important;
}

/* 3) Відступи між картками через column-gap + перерахунок ширини */
#Slider-Gallery-{{ section.id }}{
  column-gap: var(--g) !important;
}

#Slider-Gallery-{{ section.id }} > .slider__slide{
  flex: 0 0 calc(
    (100% - ({{ slides_mobile | default: 1 }} - 1) * var(--g))
    / {{ slides_mobile | default: 1 }}
  );
  min-width: calc(
    (100% - ({{ slides_mobile | default: 1 }} - 1) * var(--g))
    / {{ slides_mobile | default: 1 }}
  );
}

/* Tablet */
@media (min-width: 750px){
  #Slider-Gallery-{{ section.id }}{ --g: {{ section.settings.gap_tablet | default: 20 }}px; }
  #Slider-Gallery-{{ section.id }} > .slider__slide{
    flex-basis: calc(
      (100% - ({{ slides_tablet | default: 1 }} - 1) * var(--g))
      / {{ slides_tablet | default: 1 }}
    );
    min-width: calc(
      (100% - ({{ slides_tablet | default: 1 }} - 1) * var(--g))
      / {{ slides_tablet | default: 1 }}
    );
  }
}

/* Desktop */
@media (min-width: 990px){
  #Slider-Gallery-{{ section.id }}{ --g: {{ section.settings.gap_desktop | default: 20 }}px; }
  #Slider-Gallery-{{ section.id }} > .slider__slide{
    flex-basis: calc(
      (100% - ({{ slides_desktop | default: 1 }} - 1) * var(--g))
      / {{ slides_desktop | default: 1 }}
    );
    min-width: calc(
      (100% - ({{ slides_desktop | default: 1 }} - 1) * var(--g))
      / {{ slides_desktop | default: 1 }}
    );
  }
}



@media (max-width: 749px){
  
  #Slider-Gallery-{{ section.id }}{
    padding-left: 5px !important;
  }
  #Slider-Gallery-{{ section.id }} > .slider__slide:first-child{
